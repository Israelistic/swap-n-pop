{
  "name": "swap-n-pop",
  "productName": "swap-n-pop",
  "license": "MIT",
  "description": "Puzzle Game",
  "version": "0.9.0",
  "author": "Andrew Brown",
  "repository": {
    "url": "https://github.com/omenking/swap-n-pop"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "chai": "^4.1.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "docdash": "^0.4.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.46.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "jsdoc": "^3.5.5",
    "mocha": "^3.5.0",
    "mock-require": "^2.0.2",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "sinon": "^3.2.1",
    "style-loader": "^0.19.1",
    "ts-jest": "^21.2.4",
    "webpack": "^3.8.1"
  },
  "resolutions": {
    "webpack-sources": "1.0.1"
  },
  "build": {
    "appId": "com.swap-n-pop.app",
    "artifactName": "snp_v${version}.${ext}",
    "mac": {
      "identity": null,
      "category": "public.app-category.games",
      "publish": [
        "github"
      ],
      "icon": "./app/icons/mac/icon.icns"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ],
      "icon": "./app/icons/win/icon.ico"
    }
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "cross-env NODE_ENV=development webpack --config webpack.config.renderer.js && electron app/main.js",
    "devtools": "cross-env NODE_ENV=development webpack --config webpack.config.devtools.js",
    "main": "cross-env NODE_ENV=development webpack --config webpack.config.main.js",
    "renderer": "cross-env NODE_ENV=development webpack --config webpack.config.renderer.js",
    "ui": "cross-env NODE_ENV=development webpack --config webpack.config.ui.js",
    "pack": "electron-builder --dir",
    "dist": "cross-env NODE_ENV=production webpack && electron-builder",
    "debug": "webpack && electron app/main.js tmp/debug.snap"
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {
    "glob": "^7.1.2",
    "keycode": "^2.1.9",
    "mithril": "^1.1.5",
    "mkdir-recursive": "^0.3.0",
    "phaser-ce": "^2.9.2",
    "seedrandom": "^2.4.3",
    "shuffle-seed": "^1.1.6",
    "strftime": "^0.10.0",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2"
  }
}
